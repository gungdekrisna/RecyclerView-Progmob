<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:elevation="2dp"
    android:background="@drawable/boxshadow"
    android:padding="10dp"
    android:id="@+id/parent_layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/detail_icon"
        />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_harga"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_jumlah_kamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_lokasi"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:text="BOOKING"/>

    <TextView
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Facility" />

    <TextView
        android:id="@+id/facility1"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/facility2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/facility3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/facility4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Nearby Tourism Destination" />

    <TextView
        android:id="@+id/wisata1"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wisata2"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wisata3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wisata4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>